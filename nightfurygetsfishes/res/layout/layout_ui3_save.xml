<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/img_backgroundui3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

	<FrameLayout
	    android:layout_width="220dp"
        android:layout_height="190dp"
        android:gravity="center_horizontal|center_vertical">
        <ImageView
            android:id="@+id/clock"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_clock" />
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#DDDDDD"
            android:textSize="22dp"
            android:textStyle="bold"
            android:text="@string/_90"/>
    </FrameLayout>
	<FrameLayout
	     android:layout_width="match_parent"
         android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/question"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:background="@drawable/img_question"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="#333333"
				android:paddingLeft="20dp"
				android:paddingRight="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/ans1"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               	android:minWidth="170dp"
                android:minHeight="40dp"
                android:background="@drawable/button_answer"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
               	android:paddingLeft="20dp"
				android:paddingRight="20dp"
                android:textColor="#333333" />
             <Button
                android:id="@+id/ans2"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="170dp"
                android:minHeight="40dp"
                android:background="@drawable/button_answer"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingLeft="20dp"
				android:paddingRight="20dp"
                android:textColor="#333333"/>
              <Button
                android:id="@+id/ans3"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="170dp"
                android:minHeight="40dp"
                android:background="@drawable/button_answer"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingLeft="20dp"
				android:paddingRight="20dp"
                android:textColor="#333333" />
               <Button
                android:id="@+id/ans4"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="170dp"
                android:minHeight="40dp"
                android:background="@drawable/button_answer"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingLeft="20dp"
				android:paddingRight="20dp"
                android:textColor="#333333"/>

        </LinearLayout>
        <ToggleButton 
            android:id="@+id/btn_sound"
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:textOn=""
            android:text=""
            android:textOff=""
            android:background="@drawable/button_soundbg"
            android:layout_gravity="left|bottom"
            />
	</FrameLayout>
    </LinearLayout>

    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
		
        <ImageView
            android:id="@+id/road"
            android:layout_width="100dp"
            android:layout_height="560dp"
            android:src="@drawable/img_road" />
       
    </FrameLayout>

</LinearLayout>
