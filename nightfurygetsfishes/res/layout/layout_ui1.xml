<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_backgroundui1"
        android:orientation="horizontal" >
    
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:orientation="vertical" >
           <FrameLayout
	         android:layout_width="match_parent"
             android:layout_height="match_parent">
            <ImageView
            android:id="@+id/nightfuryui1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_nightfuryui1" />
               
              <ImageView
            android:id="@+id/nightfurytext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_nightfurytext" />
               <ImageView
            android:id="@+id/getstext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_gets" />
               <ImageView
            android:id="@+id/fishestext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_fishes" />
               
              
              
                <Button
                android:id="@+id/play_button"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               	android:background="@drawable/img_play_button"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
               	                 />
              
             <Button
                android:id="@+id/highscore_button"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_highscore_button"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                />
              <Button
                android:id="@+id/exit_button"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="170dp"
                android:minHeight="40dp"
                android:background="@drawable/img_exit_button"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingLeft="20dp"
				android:paddingRight="20dp"
                android:textColor="#333333" />
                         
            <ToggleButton
                android:id="@+id/btn_sound"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left|bottom"
                android:background="@drawable/sound"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <ToggleButton 
            android:id="@+id/btn_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textOn=""
            android:text=""
            android:textOff=""
            android:background="@drawable/img_help_button"
            android:layout_gravity="right|bottom"
            />
            </FrameLayout>
        </LinearLayout>          
    </LinearLayout>
</FrameLayout>