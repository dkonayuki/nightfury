<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/img_backgroundui1"
        android:orientation="horizontal" >
    
        
           <FrameLayout
	         android:layout_width="match_parent"
             android:layout_height="match_parent">
            <ImageView
            android:id="@+id/nightfuryui1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_nightfuryui1" />
               
              <ImageView
            android:id="@+id/nightfurytext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_nightfurytext" />
               <ImageView
            android:id="@+id/getstext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_gets" />
               <ImageView
            android:id="@+id/fishestext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/img_fishes" />
                <ImageView
            android:id="@+id/bookofdragon"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="right|bottom"
            android:src="@drawable/img_bookofdragon" />
              
              
                <Button
                android:id="@+id/play_button"
              	android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="120dp"
               	android:background="@drawable/img_play_button"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
               	                 />
              
             <Button
                android:id="@+id/highscore_button"
              	android:layout_width="100dp"
                  android:layout_height="45dp"
                  android:layout_marginLeft="0dp"
                  android:layout_marginTop="120dp"
                android:background="@drawable/img_highscore_button"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                />
              <Button
                android:id="@+id/exit_button"
              	android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/img_exit_button"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:paddingLeft="20dp"
				android:paddingRight="20dp"
                android:textColor="#333333" />
                         
            <ToggleButton
                android:id="@+id/btn_sound"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="left|bottom"
                android:background="@drawable/img_sound"
                android:text=""
                android:textOff=""
                android:textOn="" />

            <ToggleButton
                android:id="@+id/btn_help"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="right|bottom"
                android:background="@drawable/img_help_button"
                android:text=""
                android:textOff=""
                android:textOn="" />

            </FrameLayout>
              
    </LinearLayout>
</FrameLayout>