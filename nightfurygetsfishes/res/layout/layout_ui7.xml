<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    	<LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent" 
           android:weightSum="1"
           android:orientation="horizontal" 
			android:background="@drawable/img_backgroundui7"
           >

	       <LinearLayout
	           android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="0.50" 
	           android:weightSum="1"
	           android:orientation="vertical">
	           <LinearLayout
	               android:layout_width="match_parent"
	               android:layout_height="0dp"
	               android:layout_weight="0.3"
	               android:gravity="right|bottom">

	               <Button
	                   android:id="@+id/btn_2times"
	                   android:layout_width="90dp"
	                   android:layout_height="100dp"
	                   android:layout_marginRight="10dp"
	                   android:layout_marginBottom="5dp"
	                   android:background="@drawable/upgrade_2times_btn" >
	               </Button>
	           </LinearLayout>
	           <LinearLayout
	              android:layout_width="match_parent"
	              android:layout_height="0dp"
	              android:layout_weight="0.2"
	              android:gravity="right|center">

	                 <Button
	                     android:id="@+id/btn_speed"
	                     android:layout_width="90dp"
	                     android:layout_height="100dp"
	                     android:layout_margin="10dp"
	                     android:background="@drawable/upgrade_speed_btn" >
	                   
	               </Button>
	           </LinearLayout>
	           <LinearLayout
	              android:layout_width="match_parent"
	              android:layout_height="0dp"
	              android:layout_weight="0.2"
	              android:gravity="right|center">

	                 <Button
	                     android:id="@+id/btn_50"
	                     android:layout_width="90dp"
	                     android:layout_height="100dp"
	                     android:layout_margin="10dp"
	                     android:background="@drawable/upgrade_5050_btn" >
	                   
	               </Button>
	           </LinearLayout>
	           <LinearLayout
	              android:layout_width="match_parent"
	              android:layout_height="0dp"
	              android:layout_weight="0.35"
	              android:gravity="right|top">

	                 <Button
	                     android:id="@+id/btn_autoanswer"
	                     android:layout_width="90dp"
	                     android:layout_height="100dp"
	                     android:layout_margin="10dp"
	                     android:background="@drawable/upgrade_autoanswer_btn" >
	                   
	               </Button>
	           </LinearLayout>
	       </LinearLayout>
	       
	       <LinearLayout
	            android:layout_width="0dp"
	           android:layout_height="match_parent"
	           android:layout_weight="0.50" 
	           android:weightSum="1"
	           android:orientation="vertical">

	           <LinearLayout
	               android:layout_width="match_parent"
	               android:layout_height="0dp"
	               android:layout_weight="0.3"
	               android:gravity="bottom|left|right" >

	               <Button
	                   android:id="@+id/btn_change"
	                   android:layout_width="90dp"
	                   android:layout_height="100dp"
	                   android:layout_marginLeft="10dp"
	                   android:layout_marginBottom="5dp"
	                   android:background="@drawable/upgrade_change_btn" >
	                   
	               </Button>
	           </LinearLayout>

	           <LinearLayout
	               android:layout_width="match_parent"
	               android:layout_height="0dp"
	               android:layout_weight="0.2"
	               android:gravity="center|left|right" >

	                 <Button
	                     android:id="@+id/btn_time"
	                     android:layout_width="90dp"
	                     android:layout_height="100dp"
	                     android:layout_margin="10dp"
	                     android:background="@drawable/upgrade_time_btn" >
	                   
	               </Button>
	           </LinearLayout>

	           <LinearLayout
	               android:layout_width="match_parent"
	               android:layout_height="0dp"
	               android:layout_weight="0.2"
	               android:gravity="center|left|right" >

	                 <Button
	                     android:id="@+id/btn_decrease"
	                     android:layout_width="90dp"
	                     android:layout_height="100dp"
	                     android:layout_margin="10dp"
	                     android:background="@drawable/upgrade_decrease_btn" >
	                   
	               </Button>
	           </LinearLayout>

	           <LinearLayout
	               android:layout_width="match_parent"
	               android:layout_height="0dp"
	               android:layout_weight="0.35"
	               android:gravity="left|right|top" >

	                 <Button
	                     android:id="@+id/btn_fish"
	                     android:layout_width="90dp"
	                     android:layout_height="100dp"
	                     android:layout_margin="10dp"
	                     android:background="@drawable/upgrade_fish_btn" >
	                   
	               </Button>
	           </LinearLayout>
	           
	       </LinearLayout>

       </LinearLayout>
	 <ImageView 
	       android:id="@+id/upgrade_text"
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:visibility="gone"
	       />
      <ToggleButton
                  android:id="@+id/btn_sound"
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:layout_margin="10dp"
                  android:textOn=""
                  android:textOff=""
                  android:layout_gravity="left|bottom"
                  android:background="@drawable/button_soundbg" />
       <Button
            android:id="@+id/btn_back"
            android:layout_width="100dp"
            android:layout_height="45dp"        
            android:layout_margin="10dp"    
           	android:layout_gravity="right|bottom"
            android:background="@drawable/button_back" />

       
</FrameLayout>