<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.0"
    android:background="@drawable/img_background_ui3"
    >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.9"
    android:weightSum="1.0"
    android:orientation="horizontal" 
    >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:orientation="vertical" 
        android:layout_weight="0.7"
        android:weightSum="1.0">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical" 
            android:layout_weight="0.25">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center_vertical" >

                <ImageView
                    android:id="@+id/clock"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:src="@drawable/img_clock" />

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/_90"
                    android:textColor="#DDDDDD"
                    android:textSize="22dp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical" 
            android:layout_weight="0.75">

           

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" 
                    android:weightSum="1.0">
				<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:orientation="vertical" 
                    android:layout_weight="0.5"
                    >
                    <TextView
                       
                        android:id="@+id/question"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:background="@drawable/img_question"
                        android:gravity="center_horizontal|center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                         android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#333333" />
				</LinearLayout>
				<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:orientation="vertical" 
                    android:layout_weight="0.1"
                    >
                    <Button
                        android:id="@+id/ans1"          
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/button_answer"
                        android:gravity="center_horizontal|center_vertical"
                        android:minHeight="40dp"
                        android:minWidth="170dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#333333" />
				</LinearLayout>
				<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:orientation="vertical" 
                    android:layout_weight="0.1"
                    >
                    <Button
                        android:id="@+id/ans2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/button_answer"
                        android:gravity="center_horizontal|center_vertical"
                        android:minHeight="40dp"
                        android:minWidth="170dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#333333" />
                    </LinearLayout>
					<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:orientation="vertical" 
                    android:layout_weight="0.1"
                    >
                    <Button
                        android:id="@+id/ans3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/button_answer"
                        android:gravity="center_horizontal|center_vertical"
                        android:minHeight="40dp"
                        android:minWidth="170dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#333333" />
					</LinearLayout>
					<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:orientation="vertical" 
                    android:layout_weight="0.1"
                    >
                    <Button
                        android:id="@+id/ans4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                         android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:background="@drawable/button_answer"
                        android:gravity="center_horizontal|center_vertical"
                        android:minHeight="40dp"
                        android:minWidth="170dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textColor="#333333" />
				</LinearLayout>
                </LinearLayout>

                
           

        </LinearLayout>
    </LinearLayout>

	<LinearLayout
	    android:layout_width="0dip"
	    android:layout_height="match_parent"
	    android:layout_weight="0.3" 
	    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/road"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/img_road" >
		
        <RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

  		<ImageView
        android:id="@+id/goal"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="60dip"
        />
	
		<com.origidgames.nightfurygetsfishes.GifView
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginTop="480dip"
		android:layout_marginLeft="40dp"
		/>
		<com.origidgames.nightfurygetsfishes.GifView
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginTop="440dip"
		android:layout_marginLeft="40dp"
		/>
		<com.origidgames.nightfurygetsfishes.GifView
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginTop="400dip"
		android:layout_marginLeft="40dp"
		/>
		<com.origidgames.nightfurygetsfishes.GifView
		android:layout_width="20dp"
		android:layout_height="20dp"
	    android:layout_marginTop="360dip"
	    android:layout_marginLeft="50dp"
	 	/>
		<com.origidgames.nightfurygetsfishes.GifView
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:layout_marginTop="320dip"
	    android:layout_marginLeft="10dp"
	 	/>
		<com.origidgames.nightfurygetsfishes.GifView
	 	android:layout_width="20dp"
	 	android:layout_height="20dp"
	    android:layout_marginTop="260dip"
	    android:layout_marginLeft="40dp"
	 	/>
		<com.origidgames.nightfurygetsfishes.GifView
	 	android:layout_width="20dp"
	 	android:layout_height="20dp"
	    android:layout_marginTop="230dip"
	    android:layout_marginLeft="40dp"
		/>
		<com.origidgames.nightfurygetsfishes.GifView
		 android:layout_width="20dp"
		 android:layout_height="20dp"
		 android:layout_marginTop="190dip"
		 android:layout_marginLeft="40dp"
 		 />
		<com.origidgames.nightfurygetsfishes.GifView
	 		 android:layout_width="20dp"
	 		 android:layout_height="20dp"
	 		 android:layout_marginTop="140dip"
	 		 android:layout_marginLeft="40dp"
	 	/>
		<com.origidgames.nightfurygetsfishes.GifView
	 		 android:layout_width="20dp"
	 		 android:layout_height="20dp"
	 		 android:layout_marginTop="80dip"
	 		 android:layout_marginLeft="40dp"
	 	/>
		<com.origidgames.nightfurygetsfishes.GifView
 		 android:layout_width="20dp"
 		 android:layout_height="20dp"
 		 android:layout_marginTop="80dip"
 		 android:layout_marginLeft="40dp"
 	/>
		 		
		</RelativeLayout>
		
		<FrameLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent">

      		 <ImageView
      		     android:id="@+id/nightfury"
      		     android:layout_width="100dp"
      		     android:layout_height="60dp"
      		     android:layout_gravity="center_horizontal"
      		     android:layout_marginLeft="0dp"
      		     android:layout_marginTop="0dp"
      		     android:minHeight="60dp"
      		     android:minWidth="100dp"
      		     android:src="@drawable/img_nightfury" />
      		
		</FrameLayout>	 
    </FrameLayout>
    
	</LinearLayout>
	</LinearLayout>

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="0.1"
	    android:weightSum="1"
	    android:orientation="horizontal">
		 <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.125">
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.15"
	         android:gravity="center_horizontal|center_vertical"
	      >

	        <Button
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_margin="2dp"
	            android:background="@drawable/img_upgrade_50_disable" />

	    </LinearLayout>
	     <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.15"
	        android:gravity="center_horizontal|center_vertical">
	        
	        <Button
	           android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_margin="2dp"
	            android:background="@drawable/img_upgrade_change_disable" >
	            
	        </Button>
	    </LinearLayout>
	     <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.15"
	         android:gravity="center_horizontal|center_vertical">
	         <Button
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_margin="2dp"
	            android:background="@drawable/img_upgrade_doubleanswer_disable" >
	            
	        </Button>
	    </LinearLayout>
	     <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.15"
	         android:gravity="center_horizontal|center_vertical">
	        <Button
	            android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_margin="2dp"
	            android:background="@drawable/img_upgrade_plustime_disable" >
	            
	        </Button>
	    </LinearLayout>
	     <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.15"
	         android:gravity="center_horizontal|center_vertical">
	        <Button
	           android:layout_width="40dp"
	            android:layout_height="40dp"
	            android:layout_margin="5dp"
	            android:background="@drawable/img_upgrade_speedup_disable" >
	            
	        </Button>
	        
	    </LinearLayout>
	    <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="0.125">
	    </LinearLayout>
	     
	</LinearLayout>

	 
	
   </LinearLayout>
	   <ImageView 
	       android:id="@+id/pause"
	       android:layout_width="fill_parent"
	       android:layout_height="fill_parent"
	       android:background="@drawable/img_pausetext"
	       android:visibility="gone"
	       />
	       	    <ToggleButton
                  android:id="@+id/btn_sound"
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:layout_margin="10dp"
                  android:textOn=""
                  android:textOff=""
                  android:layout_gravity="left|bottom"
                  android:background="@drawable/button_soundbg" />
	    <ToggleButton
                  android:id="@+id/btn_pause"
                  android:layout_width="25dp"
                  android:layout_height="25dp"
                  android:layout_margin="10dp"
                  android:textOn=""
                  android:textOff=""
                  android:layout_gravity="right|bottom"
                  android:background="@drawable/button_pausebg" />
	     <ImageView
      		     android:id="@+id/gameover"
      		     android:layout_width="fill_parent"
      		     android:layout_height="fill_parent"
      		 />
	 
</FrameLayout>
