<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" 
    android:background="@drawable/img_backgroundui3">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" >

	<FrameLayout
	    android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_clock" />
        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="#DDDDDD"
            android:textSize="30px"
            android:textStyle="bold"
            android:text="@string/_60"/>
    </FrameLayout>
	<FrameLayout
	     android:layout_width="match_parent"
         android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_question"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="#333333"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Button
                android:id="@+id/ans1"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_answer"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="#333333" />
             <Button
                android:id="@+id/ans2"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_answer"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="#333333"/>
              <Button
                android:id="@+id/ans3"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_answer"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="#333333" />
               <Button
                android:id="@+id/ans4"
              	android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_answer"
                android:gravity="center_horizontal|center_vertical"
                android:layout_gravity="center_horizontal|center_vertical"
                android:textColor="#333333"/>

        </LinearLayout>
        <ToggleButton 
            android:id="@+id/btn_sound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:text=""
            android:textOff=""
            android:background="@drawable/button_soundbg"
            android:layout_gravity="left|bottom"
            /></FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_road" />

        <ImageView
            android:id="@+id/nightfury"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/img_nightfury" />

    </FrameLayout>

</LinearLayout>