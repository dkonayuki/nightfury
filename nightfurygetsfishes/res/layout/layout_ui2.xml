<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/img_backgroundui2"
      android:orientation="vertical" >

     <FrameLayout
	     android:layout_width="320dp"
         android:layout_height="200dp"
         android:gravity="center_horizontal|center_vertical">
         <ImageView
             android:id="@+id/group1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"         
             android:layout_gravity="center_horizontal|center_vertical"
             android:src="@drawable/group1" />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">
         <ImageButton
             android:id="@+id/ans1"
           	 android:layout_width="60dp"
             android:layout_height="80dp"
             android:layout_marginTop="60dp"
             android:layout_marginLeft="60dp"
          	 android:background="@drawable/img_easy"
             android:gravity="center_horizontal|center_vertical"
             />
         <ImageButton
             android:id="@+id/ans2"
           	 android:layout_width="60dp"
             android:layout_height="80dp"
             android:layout_marginTop="60dp"
             android:layout_marginLeft="125dp"
          	 android:background="@drawable/img_normal"
             android:gravity="center_horizontal|center_vertical"
             />
         <ImageButton
             android:id="@+id/ans3"
           	 android:layout_width="60dp"
             android:layout_height="80dp"
             android:layout_marginTop="60dp"
             android:layout_marginLeft="190dp"
          	 android:background="@drawable/img_hard"
             android:gravity="center_horizontal|center_vertical"
             />
       </RelativeLayout>
      </FrameLayout>
      
       <FrameLayout 
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
          <ToggleButton
                android:id="@+id/btn_sound"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_gravity="left|bottom"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_soundbg"
                android:text=""
                android:textOff=""
                android:textOn="" /> 
          <Button
            android:id="@+id/imageButton1"
            android:layout_width="100dp"
            android:layout_height="45dp"            
            android:layout_gravity="right|bottom"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_back" />
       </FrameLayout> 
       
  </LinearLayout>

</FrameLayout>